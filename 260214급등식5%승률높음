import matplotlib

# í™”ë©´ í‘œì‹œ ì—†ì´ ë‚´ë¶€ì—ì„œ ì´ë¯¸ì§€ ìƒì„± (ì¶©ëŒ ë°©ì§€)
matplotlib.use('Agg')

import backtrader as bt
import pandas as pd
import os
import math
from datetime import time
from collections import defaultdict
import matplotlib.pyplot as plt


# ==========================================
# [ì „ëµ] ì¼ë´‰ ê¸‰ë“±ì£¼ ëŒíŒŒ (5% ê³ ì • ì§„ì…)
# ==========================================
class CustomDailyStrategy(bt.Strategy):
    """
    [ğŸ“¢ ì˜ì›…ë¬¸ [0150] ì¡°ê±´ê²€ìƒ‰ì‹ ì„¤ì • ê°€ì´ë“œ (5% ëŒíŒŒ ì „ëµ)]
    ----------------------------------------------------------------------
    â€» ì•„ë˜ ìˆœì„œëŒ€ë¡œ ì…ë ¥í•˜ê³  [ì¡°ê±´ì¶”ê°€]ë¥¼ ëˆ„ë¥´ì„¸ìš”.
    â€» [ëŒ€ìƒë³€ê²½]: ê´€ë¦¬ì¢…ëª©, ê±°ë˜ì •ì§€, ì •ë¦¬ë§¤ë§¤, ETN, ìŠ¤íŒ©, ETF ì œì™¸ ì²´í¬

    A. [ì£¼ê°€ë“±ë½ë¥ ] [ì¼] 1ë´‰ì „(ì „ì¼) ì¢…ê°€ ëŒ€ë¹„ 0ë´‰ì „(ê¸ˆì¼) ê³ ê°€ ë“±ë½ë¥  5% ì´ìƒ
       (ì„¤ëª…: ì¥ì¤‘ 5% ì´ìƒ ìƒìŠ¹í•œ ì¢…ëª©ì„ ì‹¤ì‹œê°„ í¬ì°©)

    B. [ê±°ë˜ëŒ€ê¸ˆ] [ì¼] 5000 ì´ìƒ (ë‹¨ìœ„:ë°±ë§Œ)
       (ì„¤ëª…: ë‹¹ì¼ ê±°ë˜ëŒ€ê¸ˆ 50ì–µ ì› ì´ìƒ, ìœ ë™ì„± í™•ë³´)

    C. [ì£¼ê°€ì´ë™í‰ê· ë¹„êµ] [ì¼] 0ë´‰ì „ 3ì´í‰ > 5ì´í‰ (ì¢…ê°€ê¸°ì¤€)
       (ì„¤ëª…: 3ì¼ì„ ì´ 5ì¼ì„ ë³´ë‹¤ ìœ„ì— ìˆëŠ” ë‹¨ê¸° ì •ë°°ì—´ ìƒíƒœ)

    D. [ê°€ê²©-ì´ë™í‰ê· ë¹„êµ] [ì¼] 0ë´‰ì „ (ì¢…ê°€+ê³ ê°€+ì €ê°€)/3 >= 10ì´í‰
       or [Bollinger Band] ê¸°ê°„:10, ìŠ¹ìˆ˜:2, ì¢…ê°€ê°€ ìƒí•œì„  ì´ìƒ
       (ì„¤ëª…: ë³¼ë¦°ì € ë°´ë“œ ìƒë‹¨ ëŒíŒŒ ë˜ëŠ” ìƒìŠ¹ ì¶”ì„¸ í™•ì¸)

    ----------------------------------------------------------------------
    [ë°±í…ŒìŠ¤íŒ… ë§¤ë§¤ ë¡œì§]
    1. ë§¤ìˆ˜: ìœ„ ì¡°ê±´ A~Dë¥¼ ë§Œì¡±í•˜ê³ , ì£¼ê°€ê°€ ì „ì¼ ëŒ€ë¹„ +5% ê°€ê²©ì— ë„ë‹¬í–ˆì„ ë•Œ ì§„ì… ê°€ì •
       (â€» ì‹œê°€ê°€ +5% ìœ„ì—ì„œ ì‹œì‘í•˜ë©´ ì‹œê°€ ë§¤ìˆ˜, ì•„ë‹ˆë©´ +5% ê°€ê²© ë§¤ìˆ˜)
    2. ë§¤ë„: 3ì¼ ì´ë™í‰ê· ì„ ì´ 5ì¼ ì´ë™í‰ê· ì„ ì„ í•˜í–¥ ëŒíŒŒ(ë°ë“œí¬ë¡œìŠ¤) ì‹œ ì¢…ê°€ ì²­ì‚°
    ----------------------------------------------------------------------
    """
    params = (
        ('target_pct', 0.05),  # [ê³ ì •] ì§„ì… ëª©í‘œ ìƒìŠ¹ë¥  5%
        ('ma_fast', 3),  # 3ì¼
        ('ma_slow', 5),  # 5ì¼
        ('boll_period', 10),  # ë³¼ë¦°ì €ë°´ë“œ ê¸°ê°„
        ('boll_dev', 2.0),  # ë³¼ë¦°ì €ë°´ë“œ ìŠ¹ìˆ˜
        ('debug', False),
    )

    def __init__(self):
        # ì´ë™í‰ê· ì„ 
        self.ma3 = bt.indicators.SimpleMovingAverage(self.data.close, period=self.p.ma_fast)
        self.ma5 = bt.indicators.SimpleMovingAverage(self.data.close, period=self.p.ma_slow)

        # ë³¼ë¦°ì € ë°´ë“œ
        typical_price = (self.data.high + self.data.low + self.data.close) / 3.0
        self.bband = bt.indicators.BollingerBands(typical_price, period=self.p.boll_period, devfactor=self.p.boll_dev)

        self.order = None
        self.buy_size = 0
        self.trades_history = []
        self.manual_entry_price = 0

        # ì°¨íŠ¸ í‘œê¸°ë¥¼ ìœ„í•œ ë§¤ìˆ˜ ì§€ì  ì €ì¥ì†Œ (ë‚ ì§œ, ê°€ê²©)
        self.buy_points = []

    def notify_order(self, order):
        if order.status in [order.Completed]:
            if order.isbuy():
                self.buy_size = order.executed.size

                # ë§¤ìˆ˜ ì²´ê²° ì‹œì ê³¼ ê°€ê²©(ê°€ì • ì§„ì…ê°€)ì„ ê¸°ë¡
                dt = bt.num2date(order.executed.dt).date()
                price = self.manual_entry_price
                self.buy_points.append((dt, price))

            self.bar_executed = len(self)
        self.order = None

    def notify_trade(self, trade):
        if not trade.isclosed: return

        entry_price = self.manual_entry_price
        exit_price = trade.price

        if entry_price != 0:
            # ì‹¤ì œ ìˆ˜ìµê¸ˆ ì¬ê³„ì‚° (ì£¼ë‹¹ ì°¨ìµ * ìˆ˜ëŸ‰)
            real_pnl = (exit_price - entry_price) * abs(self.buy_size)
            # íˆ¬ìê¸ˆ ëŒ€ë¹„ ìˆ˜ìµë¥ 
            profit_pct = ((exit_price - entry_price) / entry_price) * 100
        else:
            profit_pct = 0.0
            real_pnl = 0

        close_date = bt.num2date(trade.dtclose)

        self.trades_history.append({
            'date': close_date,
            'profit_pct': profit_pct,
            'pnl': real_pnl,
            'is_win': real_pnl > 0,
            'entry_price': entry_price,  # ìƒì„¸ ë¡œê·¸ìš©
            'exit_price': exit_price  # ìƒì„¸ ë¡œê·¸ìš©
        })

    def next(self):
        if self.order: return
        if self.data.close[0] == 0: return

        # --------------------------------
        # [ë§¤ë„ ì¡°ê±´] 3ì¼ < 5ì¼ ë°ë“œí¬ë¡œìŠ¤
        # --------------------------------
        if self.position:
            if self.ma3[0] < self.ma5[0]:
                self.order = self.sell(size=self.position.size)
            return

        # --------------------------------
        # [ë§¤ìˆ˜ ì¡°ê±´] ë³€ë™ì„± ëŒíŒŒ (5% ìƒìŠ¹ ì‹œ ì§„ì…)
        # --------------------------------
        if not self.position:
            prev_close = self.data.close[-1]
            if prev_close == 0: return

            # [í•µì‹¬] ëª©í‘œ ì§„ì…ê°€: ì „ì¼ ì¢…ê°€ * 1.05
            target_price = prev_close * (1 + self.p.target_pct)

            # 1. ê³ ê°€ê°€ ëª©í‘œê°€ì— ë„ë‹¬í–ˆëŠ”ì§€ í™•ì¸
            if self.data.high[0] < target_price:
                return

            # ì§„ì… ê°€ê²© í™•ì • (ê°­ìƒìŠ¹ì´ë©´ ì‹œê°€, ì•„ë‹ˆë©´ ëª©í‘œê°€)
            entry_price = max(self.data.open[0], target_price)

            # 2. ê±°ë˜ëŒ€ê¸ˆ 50ì–µ ì´ìƒ
            trade_amount = self.data.close[0] * self.data.volume[0]
            if trade_amount < 5000000000: return

            # 3. ì •ë°°ì—´ (3ì¼ > 5ì¼)
            if self.ma3[0] <= self.ma5[0]: return

            # 4. ë³¼ë¦°ì €ë°´ë“œ ìƒë‹¨ ëŒíŒŒ
            if self.data.close[0] <= self.bband.lines.top[0]: return

            # --- [ì§„ì… ì‹¤í–‰] ---
            cash = self.broker.getcash()
            bet_amount = 10000000  # 1,000ë§Œì›

            if cash >= bet_amount:
                # ìˆ˜ëŸ‰ ê³„ì‚° (ëª©í‘œê°€ ê¸°ì¤€)
                size = math.floor(bet_amount / entry_price)
                if size > 0:
                    self.order = self.buy(size=size)
                    self.manual_entry_price = entry_price


# ==========================================
# ì‹¤í–‰ í•¨ìˆ˜
# ==========================================
def run_single_backtest(file_path, target_pct=0.05):
    try:
        df = pd.read_excel(file_path)
        rename_map = {'í˜„ì¬ê°€': 'Close', 'ì¢…ê°€': 'Close', 'ì‹œê°€': 'Open', 'ê³ ê°€': 'High', 'ì €ê°€': 'Low', 'ê±°ë˜ëŸ‰': 'Volume',
                      'ì¼ì': 'Date'}
        df = df.rename(columns=rename_map)

        for col in ['Close', 'Open', 'High', 'Low', 'Volume']:
            if col in df.columns:
                df[col] = df[col].astype(float).abs()

        if 'Date' in df.columns:
            if df['Date'].dtype == 'object':
                df['Date'] = pd.to_datetime(df['Date'])
            df = df.sort_values('Date').set_index('Date')
        else:
            return None

        if len(df) < 60: return None

        cerebro = bt.Cerebro(runonce=False)
        cerebro.broker.set_coc(True)

        # ì „ëµì— ëª©í‘œ ìƒìŠ¹ë¥ (target_pct) ì „ë‹¬
        cerebro.addstrategy(CustomDailyStrategy, target_pct=target_pct)
        cerebro.adddata(bt.feeds.PandasData(dataname=df))

        cerebro.broker.setcash(100000000)
        cerebro.broker.setcommission(commission=0.00015)

        strats = cerebro.run()

        trades_hist = strats[0].trades_history
        if not trades_hist:
            return {'trades': 0, 'wins': 0, 'win_rate': 0, 'profit_rate': 0, 'total_profit': 0, 'history': []}

        total_trades = len(trades_hist)
        wins = sum(1 for t in trades_hist if t['is_win'])
        win_rate = (wins / total_trades * 100) if total_trades > 0 else 0

        total_profit = sum(t['pnl'] for t in trades_hist)
        total_profit_rate = sum(t['profit_pct'] for t in trades_hist)

        return {
            'trades': total_trades,
            'wins': wins,
            'win_rate': win_rate,
            'profit_rate': total_profit_rate,
            'total_profit': total_profit,
            'history': trades_hist
        }

    except Exception as e:
        return None


# ==========================================
# 1ìœ„ ì¢…ëª© ìƒì„¸ ë¶„ì„ ë° ì°¨íŠ¸ ìƒì„±
# ==========================================
def generate_best_stock_chart(file_path, stock_name, best_pct):
    try:
        print(f"\nğŸ¨ ìµœê³  ìˆ˜ìµ ì¢…ëª© [{stock_name}] ìƒì„¸ ë¶„ì„ (ì„¤ì •: +{int(best_pct * 100)}% ëŒíŒŒ ì§„ì…)")

        df = pd.read_excel(file_path)
        rename_map = {'í˜„ì¬ê°€': 'Close', 'ì¢…ê°€': 'Close', 'ì‹œê°€': 'Open', 'ê³ ê°€': 'High', 'ì €ê°€': 'Low', 'ê±°ë˜ëŸ‰': 'Volume',
                      'ì¼ì': 'Date'}
        df = df.rename(columns=rename_map)

        for col in ['Close', 'Open', 'High', 'Low', 'Volume']:
            if col in df.columns:
                df[col] = df[col].astype(float).abs()

        if df['Date'].dtype == 'object':
            df['Date'] = pd.to_datetime(df['Date'])
        df = df.sort_values('Date').set_index('Date')

        cerebro = bt.Cerebro(runonce=False)
        cerebro.broker.set_coc(True)

        cerebro.addstrategy(CustomDailyStrategy, target_pct=best_pct)
        cerebro.adddata(bt.feeds.PandasData(dataname=df))
        cerebro.broker.setcash(100000000)
        cerebro.broker.setcommission(commission=0.00015)

        strats = cerebro.run()
        strat = strats[0]

        print(f"\nğŸ“œ [{stock_name}] ë§¤ë§¤ ìƒì„¸ ì¼ì§€")
        print("-" * 80)
        print(f"{'ì²­ì‚°ì¼':<12} | {'êµ¬ë¶„':<4} | {'ë§¤ìˆ˜ê°€':>10} | {'ë§¤ë„ê°€':>10} | {'ìˆ˜ìµê¸ˆ':>12} | {'ìˆ˜ìµë¥ ':>7}")
        print("-" * 80)

        trades_hist = strat.trades_history
        total_pnl = 0

        for t in trades_hist:
            date_str = t['date'].strftime('%Y-%m-%d')
            pnl = t['pnl']
            pct = t['profit_pct']
            mark = "ğŸ”ºìµì ˆ" if pnl > 0 else "ğŸ”¹ì†ì ˆ"
            entry = t['entry_price']
            exit_p = t['exit_price']

            print(f"{date_str:<12} | {mark:<4} | {entry:10,.0f} | {exit_p:10,.0f} | {pnl:>11,.0f}ì› | {pct:>6.2f}%")
            total_pnl += pnl

        print("-" * 80)
        print(f"ğŸ’° ì´ ëˆ„ì  ìˆ˜ìµ: {total_pnl:,.0f}ì›")

        plot_filename = f'best_chart_{stock_name}.png'
        print(f"\nğŸ“¸ ì°¨íŠ¸ ì´ë¯¸ì§€ë¥¼ ì €ì¥ ì¤‘ì…ë‹ˆë‹¤... ({plot_filename})")

        figs = cerebro.plot(style='candlestick', barup='red', bardown='blue', volume=True)
        fig = figs[0][0]
        ax = fig.get_axes()[0]

        # ë§¤ìˆ˜ í¬ì¸íŠ¸ í…ìŠ¤íŠ¸ ì¶”ê°€
        data_dates = [bt.num2date(x).date() for x in strat.data.datetime.array]
        date_to_idx = {d: i for i, d in enumerate(data_dates)}

        for dt, price in strat.buy_points:
            if dt in date_to_idx:
                idx = date_to_idx[dt]
                ax.annotate(f'{price:,.0f}',
                            xy=(idx, price),
                            xytext=(0, 20),
                            textcoords='offset points',
                            arrowprops=dict(facecolor='blue', shrink=0.05, headwidth=5, width=1),
                            fontsize=8, color='blue', fontweight='bold', ha='center')

        fig.savefig(plot_filename, dpi=150)
        print(f"âœ… ì°¨íŠ¸ ì €ì¥ ì™„ë£Œ! '{plot_filename}'")

    except Exception as e:
        print(f"âŒ ì°¨íŠ¸ ìƒì„± ì‹¤íŒ¨: {e}")


def main():
    print("=== ğŸ¯ [ì¼ë´‰ ì „ëµ] +5% ì§€ì  ì •ë°€ íƒ€ê²© ë§¤ë§¤ (ë‹¨ì¼ ì¡°ê±´) ===")
    print("\n[ğŸ“¢ ì˜ì›…ë¬¸ ì¡°ê±´ê²€ìƒ‰ì‹ ì„¤ì • ê°€ì´ë“œ]")
    print("-" * 70)
    print("1. [ì£¼ê°€ë“±ë½ë¥ ] ì „ì¼ì¢…ê°€ ëŒ€ë¹„ ê¸ˆì¼ê³ ê°€ 5% ì´ìƒ (ì§„ì… íŠ¸ë¦¬ê±°)")
    print("2. [ê±°ë˜ëŒ€ê¸ˆ] 5000 ì´ìƒ (50ì–µâ†‘)")
    print("3. [ì£¼ê°€ì´ë™í‰ê· ë¹„êµ] 3ì´í‰ > 5ì´í‰")
    print("4. [Bollinger Band] ì¢…ê°€ê°€ ìƒí•œì„  ì´ìƒ")
    print("-" * 70 + "\n")

    data_dir = "stock_data_51"
    if not os.path.exists(data_dir):
        print(f"ğŸš¨ '{data_dir}' í´ë”ê°€ ì—†ìŠµë‹ˆë‹¤!")
        return

    files = [os.path.join(data_dir, f) for f in os.listdir(data_dir) if f.endswith(".xlsx")]
    print(f"ğŸ“‚ ë¶„ì„ ëŒ€ìƒ: {len(files)}ê°œ ì¢…ëª©\n")

    target_pct = 0.05  # 5% ê³ ì •

    print(f"{'ì¢…ëª©ëª…':<15} | {'ê²Œì„ìˆ˜':>5} | {'ìŠ¹ë¥ ':>6} | {'ì´ ìˆ˜ìµë¥ ':>10} | {'ì´ ìˆ˜ìµê¸ˆ':>12}")
    print("-" * 80)

    total_stats = {'trades': 0, 'profit': 0, 'wins': 0}
    best_stock = {'profit': -99999999999, 'name': '', 'file': ''}

    results = []

    for file_path in files:
        stock_name = os.path.basename(file_path).split('_')[-1].replace('.xlsx', '')

        res = run_single_backtest(file_path, target_pct=target_pct)

        if res and res['trades'] > 0:
            results.append((stock_name, res))

            total_stats['trades'] += res['trades']
            total_stats['profit'] += res['total_profit']
            total_stats['wins'] += res['wins']

            # ì¶œë ¥ìš© í¬ë§·íŒ…
            mark = "ğŸ”´" if res['total_profit'] > 0 else "ğŸ”µ"
            print(
                f"{stock_name:<15} | {res['trades']:5d}íšŒ | {res['win_rate']:5.1f}% | {res['profit_rate']:9.2f}% | {res['total_profit']:11,.0f}ì› {mark}")

            # ìµœê³  ìˆ˜ìµ ì¢…ëª© ê°±ì‹ 
            if res['total_profit'] > best_stock['profit']:
                best_stock = {'profit': res['total_profit'], 'name': stock_name, 'file': file_path}

    print("-" * 80)

    if results:
        avg_win_rate = (total_stats['wins'] / total_stats['trades'] * 100) if total_stats['trades'] > 0 else 0

        print(f"\nğŸ“Š [ì „ì²´ í¬íŠ¸í´ë¦¬ì˜¤ ìš”ì•½]")
        print(f"   - ì´ ë§¤ë§¤ íšŸìˆ˜ : {total_stats['trades']}íšŒ")
        print(f"   - ì „ì²´ ìŠ¹ë¥     : {avg_win_rate:.2f}%")
        print(f"   - ì´ ëˆ„ì  ìˆ˜ìµ : {total_stats['profit']:,.0f}ì›")

        if best_stock['name']:
            print(f"\nğŸ† ìµœê³  ìˆ˜ìµ ì¢…ëª©: [{best_stock['name']}] (+{best_stock['profit']:,.0f}ì›)")
            generate_best_stock_chart(best_stock['file'], best_stock['name'], target_pct)
    else:
        print("\nâŒ ì¡°ê±´ì— ë§ëŠ” ë§¤ë§¤ê°€ ë°œìƒí•˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤.")


if __name__ == "__main__":
    main()
